# Backend environment variables
# Copy to .env and fill in your actual values

# OpenAI API Key (optional - for ChatGPT responses)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (optional - defaults to gpt-3.5-turbo)
OPENAI_MODEL=gpt-3.5-turbo

# API Key for protecting /api/generate-pdf endpoint (optional)
API_KEY=your_api_key_here

# Local LLM command (optional - for gpt4all or similar)
LLM_CMD=gpt4all

# Flask/FastAPI environment
FLASK_ENV=production
